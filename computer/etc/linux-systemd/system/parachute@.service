[Unit]
Description=Parachute Base Server for %i
Documentation=https://github.com/OpenParachutePBC/parachute
After=network.target

[Service]
User=%i
Type=simple
Environment=VAULT_PATH=/home/%i/Parachute
Environment=PORT=3333
Environment=HOST=0.0.0.0
ExecStart=/usr/local/bin/parachute-server
Restart=on-failure
RestartSec=10
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
