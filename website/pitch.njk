<script>
    const sections = Array.from(document.querySelectorAll('.pitch-section'));
    const total = sections.length;
    const progressFill = document.getElementById('progressFill');
    const sectionLabel = document.getElementById('sectionLabel');

    // ── Progress bar driven by scroll ──
    function updateProgress() {
        const scrollTop = window.scrollY;
        const docHeight = document.documentElement.scrollHeight - window.innerHeight;
        const pct = docHeight > 0 ? scrollTop / docHeight : 0;
        progressFill.style.width = `${pct * 100}%`;
    }

    // ── Section label via IntersectionObserver ──
    const observer = new IntersectionObserver(entries => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const idx = sections.indexOf(entry.target) + 1;
                sectionLabel.textContent = `${idx} / ${total}`;
            }
        });
    }, { threshold: 0.5 });

    sections.forEach(s => observer.observe(s));

    window.addEventListener('scroll', updateProgress, { passive: true });
    updateProgress();

    // ── Keyboard navigation: Space/arrows jump section-by-section ──
    function currentSectionIndex() {
        const mid = window.innerHeight / 2;
        let best = 0, bestDist = Infinity;
        sections.forEach((s, i) => {
            const rect = s.getBoundingClientRect();
            const center = rect.top + rect.height / 2;
            const dist = Math.abs(center - mid);
            if (dist < bestDist) { bestDist = dist; best = i; }
        });
        return best;
    }

    function scrollToSection(idx) {
        if (idx < 0 || idx >= total) return;
        sections[idx].scrollIntoView({ behavior: 'smooth', block: 'start' });
    }

    document.addEventListener('keydown', e => {
        if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA') return;
        const cur = currentSectionIndex();
        if (['ArrowRight', 'ArrowDown', ' '].includes(e.key)) {
            e.preventDefault();
            scrollToSection(cur + 1);
        }
        if (['ArrowLeft', 'ArrowUp'].includes(e.key)) {
            e.preventDefault();
            scrollToSection(cur - 1);
        }
    });

    // ── Touch swipe ──
    let tx = 0, ty = 0;
    document.addEventListener('touchstart', e => {
        tx = e.touches[0].clientX;
        ty = e.touches[0].clientY;
    }, { passive: true });
    document.addEventListener('touchend', e => {
        const dx = tx - e.changedTouches[0].clientX;
        const dy = ty - e.changedTouches[0].clientY;
        if (Math.abs(dy) > Math.abs(dx) && Math.abs(dy) > 50) {
            scrollToSection(currentSectionIndex() + (dy > 0 ? 1 : -1));
        }
    });

    // ── Hash routing ──
    const hash = parseInt(location.hash.slice(1));
    if (hash >= 1 && hash <= total) {
        setTimeout(() => scrollToSection(hash - 1), 50);
    }
</script>
