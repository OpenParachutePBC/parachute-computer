{
  "name": "parachute-base",
  "version": "0.1.0",
  "description": "Backend server for Parachute ecosystem - AI agents, MCP servers, and vault management",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test": "node --test lib/*.test.js",
    "test:e2e": "node test/e2e-session-tests.js",
    "test:e2e:isolated": "node test/e2e-session-tests.js --isolated",
    "install-service": "bash deploy/install.sh",
    "uninstall-service": "launchctl unload ~/Library/LaunchAgents/xyz.openparachute.agent.plist",
    "logs": "tail -f logs/stdout.log",
    "logs:error": "tail -f logs/stderr.log",
    "migrate": "node scripts/migrate-vault.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ai",
    "agent",
    "claude",
    "anthropic",
    "markdown",
    "obsidian"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "latest",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^11.6.0",
    "express": "^4.21.0",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "marked": "^15.0.0",
    "multer": "^2.0.2",
    "unzipper": "^0.12.3",
    "zod": "^3.24.1"
  }
}
